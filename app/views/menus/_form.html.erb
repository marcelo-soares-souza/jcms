<%= form_for @menu, :html => { :class => "form-stacked" } do |f| %>
  <% if @menu.errors.any? %>
      <div class="alert-message alert">
      <h2><%= pluralize(@menu.errors.count, t('Error')) %></h2>
      <ul>
      <% @menu.errors.full_messages.each do |msg| %>
        <li><strong><%= msg %></strong></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <div class="clearfix">
      <%= f.label :title %>
      <div class="input">
        <%= f.text_field :title %>
      </div>
    </div>

    <div class="clearfix">
      <%= f.label :url %>
      <div class="input">
        <%= f.text_field :url %>
      </div>
    </div>

    <div class="actions">
      <%
        if params[:action] == 'edit'
          type = 'btn success'
        else
          type = 'btn primary'
        end
      %>

      <%= f.submit 'class' => type, :disable_with => I18n.t('Submitting') %>

      <%= link_to_if (params[:action] == 'edit', t('Delete'), @menu, :class => 'btn danger', :confirm => t('Are you sure?'), :method => :delete) {} %>
    </div>
  </fieldset>
<% end %>
