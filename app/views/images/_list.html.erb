<table class="bordered-table zebra-striped">
  <thead>
    <tr>
      <th>#</th>
      <th><%= t("image")%></th>
      <th><%= t("title")%></th>
      <th><%= t("abstract") %></th>
      <th><%= t("license") %></th>
      <th><%= t("publish") %></th>
      <th><%= t("firstpage") %></th>
      <th><%= t("Owner(s)") %></th>
    </tr>
  </thead>
  <tbody>
    <% images.each do |image| %>
    <tr>
      <td><%= link_to_if user_signed_in?, image.id, edit_image_path(image) %></td>
      <td><%= link_to  (image_tag image.image.url(:thumb)), image.image.url, :id => "image-box" %></td>
      <td><%= link_to_if user_signed_in?, image.title, edit_image_path(image) %></td>
      <td><%= image.abstract %></td>
      <td><%= image.license.name %></td>
      <td><%= image.publish %></td>
      <td><%= image.firstpage %></td>
      <% image.users.each do |user| %>
        <td><%= user.firstname %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

