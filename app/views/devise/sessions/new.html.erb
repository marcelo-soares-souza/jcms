<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-stacked" }) do |f| %>
  <fieldset>
    <div class="clearfix">
      <%= f.label :email %>
      <div class="input">
        <%= f.email_field :email %>
      </div>
    </div>

    <div class="clearfix">
      <%= f.label :password %>
      <div class="input">
        <%= f.password_field :password %>
      </div>
    </div>

    <div class="clearfix">
    <% if devise_mapping.rememberable? -%>
      <div><%= f.check_box :remember_me %> <%= t("Remember Me") %></div>
    <% end -%>
    </div>

    <div class="actions">
      <%= f.submit t("Sign in"), 'class' => 'btn success' %>
      <%= render "links" %>
    </div>
  </fieldset>
<% end %>

