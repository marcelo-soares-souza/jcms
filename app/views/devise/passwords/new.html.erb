<h1><%= t("Password") %></h1>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>
  <fieldset>
    <div class="clearfix">
      <%= f.label :email %>
      <div class="input">
        <%= f.email_field :email %>
      </div>
    </div>
    <div class="actions">
       <%= f.submit t("Send me reset password instructions"), 'class' => 'btn danger' %>
       <%= render "links" %>
    </div>
  </fieldset>
<% end %>


